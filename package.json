{
	"name": "rtxt",
	"version": "1.0.0",
	"description": "Transforming HTML tag inside the text into React components",
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"scripts": {
