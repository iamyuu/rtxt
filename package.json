	},
	"devDependencies": {
		"@testing-library/react": "13.0.1",
		"@vitejs/plugin-react": "1.3.1",
		"happy-dom": "2.55.0",
		"react": "18.0.0",
		"tsup": "5.12.5",
		"typescript": "4.6.3",
		"vitest": "0.9.3"
	},
	"tsup": {
		"entry": [
			"index.tsx"
		],
